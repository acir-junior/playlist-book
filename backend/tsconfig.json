{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["app/*"],
      "@infra/*": ["infra/*"],
      "@useCases/*": ["use-cases/*"],
      "@utils/*": ["utils/*"],
      "@helpers/*": ["utils/helpers/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts", "test", "src/index.ts", "jest.config.ts"],
  "exclude": ["node_modules"]
}
